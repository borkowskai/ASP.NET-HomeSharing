@model IEnumerable<EpreuveIzabela.Models.PaysModel>
@{
    ViewBag.Title = "AddProperties";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddProperties</h2>
<!-- banner -->
<div class="inside-banner">
    <div class="container">
        <span class="pull-right"><a href="#">Home</a> / Register</span>
        <h2>Register</h2>
    </div>
</div>
<!-- banner -->


<div class="container">
    <div class="spacer">
        <div class="row register">
            <form action="~/Bien/BienRegister" method="POST" enctype="multipart/form-data" class="col-lg-6 col-lg-offset-3 col-sm-6 col-sm-offset-3 col-xs-12 ">
                @Html.AntiForgeryToken()

                <input type="text" required class="form-control" placeholder="Title" name="Titre">
                <input type="text" required class="form-control" placeholder="Short Description" name="DescriptionCourte">
                <input type="text" required class="form-control" placeholder="Long Description" name="DescriptionLongue">
                <input type="text" r class="form-control" placeholder="Max People" name="Capacité">
                <input type="file" class="form-control" placeholder="Photo" name="Photo">
                <label class="form-control">Choose your country</label>
                <select class="form-control" name="Fk_Pays">
                    <option disabled selected value> -- select an option -- </option>
                    @* I je pouvais le faire par la liste dans le membreappeler getAll de Pays *@
                    @foreach (EpreuveIzabela.Models.PaysModel item in Model)
                    {
                        <option value="@item.IdPays" @*name="@item.IdPays"*@>@item.Libelle</option>
                    }
                </select>

                <button type="submit" class="btn btn-success" name="Submit">Register</button>

            </form>

        </div>
    </div>
</div>

